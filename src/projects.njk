{% extends 'page.njk' %}
{% from 'hero.njk' import hero  %}

{% set title = "Projects" %}
{% set description = "Here is a listing of all the stuff I've built that I think is worth displaying!" %}

{% block body %}

  {{ hero(
    eyebrow = 'Peep the source',
    heading = "Projects I hacked together.",
    paragraph = description
  ) }}

  <section class="container section-spacing">
    {% for item in collections.projects %}
      <article class="flex flex-wrap items-center {{ 'pt-12 mt-12 border-t' if not loop.first }}">
        <img
          alt="{{ item.data.title }} image"
          class="w-full rounded-lg shadow-lg object-cover object-top h-64 md:w-1/2 lg:w-1/3"
          src="{{ item.data.image }}"
        >
        <div class="mt-8 flex-1 md:pl-12 md:mt-0">
          <a target="_blank" href="{{ item.data.link }}">
            <h2 class="text-2xl md:text-3xl font-extrabold leading-none">{{ item.data.title }}</h2>
            <p class="text-sm font-medium {{ item.data.color }} underline">{{ item.data.link }}</p>
          </a>
          <p class="text-base text-gray-700 mt-4">{{ item.data.description }}</p>
          <a
            target="_blank"
            href="{{ item.data.link }}"
            class="inline-flex items-center mt-6 {{ item.data.color }} font-bold"
          >
            <span class="leading-none">
              View Project
            </span>
            <span class="w-4 ml-1">
              {% include 'icons/arrow.svg' %}
            </span>
          </a>
        </div>
      </article>
    {% endfor %}
  </section>

  {% include 'contact-cta.njk' %}

{% endblock body %}
